{
    "compilerOptions": {
        "checkJs": true,
        "resolveJsonModule": true,
        "moduleResolution": "node",
        "target": "es2018",
        "module": "ESNext"
    },
    "exclude": [
        "dist",
        "node_modules",
        "build",
        ".vscode",
        ".nuxt",
        "coverage",
        "jspm_packages",
        "tmp",
        "temp",
        "bower_components",
        ".npm",
        ".yarn"
    ],
    "typeAcquisition": {
        "enable": true,
        "include": [
            "jest",
            "node"
        ]
    }
}